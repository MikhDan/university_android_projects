<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2"
    android:orientation="vertical"
    tools:context=".activity_home_again">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_1"
        android:gravity="center_horizontal"
        android:text="@string/txt1"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:background="@color/nomer_1"
        android:gravity="center_vertical"
        android:text="@string/nomer_1"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="48sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="0.3"
        android:background="@color/nomer_2"
        android:gravity="center_vertical"
        android:text="@string/nomer_2"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="48sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3"
        android:background="@color/but_1"
        android:gravity="center_vertical"
        android:text="@string/but_1"
        android:textSize="48sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="0.3"
        android:background="@color/but_2"
        android:gravity="center_vertical"
        android:text="@string/but_2"
        android:textSize="48sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="0.3"
        android:background="@color/but_3"
        android:gravity="center_vertical"
        android:text="@string/but_3"
        android:textSize="48sp"
        android:textStyle="italic" />

</LinearLayout>